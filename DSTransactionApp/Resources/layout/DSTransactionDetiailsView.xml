         android:layout_width="2dp"
        android:id="@+id/sep6"  
        android:layout_below="@+id/sep5"  
         android:layout_toRightOf="@id/transactionreftitle"  
     />
       <TextView  
        android:id="@+id/paymentdatetitle"  
        android:text="Payment date"  
         android:layout_below="@+id/sep5"  
        android:layout_toRightOf="@+id/sep4"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="25px"   
        android:paddingLeft="10px"
        android:paddingTop="10px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
     <TextView  
        android:id="@+id/paymentdate"  
        android:text="8756555"  
        android:layout_below="@+id/paymentdatetitle"
         android:layout_toRightOf="@+id/sep6"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="35px"   
        android:paddingLeft="10px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
     <View
        android:background="@android:color/darker_gray"
       android:layout_height="2dp"
         android:layout_width="match_parent"
        android:id="@+id/sep7"  
        android:layout_below="@+id/sep6"  
     /> 
      <ImageView  
        android:id="@+id/photoImageView"  
        android:layout_width="180px"  
        android:layout_height="180px"  
        android:layout_below="@+id/sep7"  
        android:layout_centerVertical="true"  
        android:layout_centerHorizontal="true"
        android:src="@drawable/correct"
      />  

      <TextView  
        android:id="@+id/successtitle"  
        android:text="Success"  
        android:layout_below="@+id/photoImageView"
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="55px"   
        android:paddingLeft="10px"
                android:layout_centerHorizontal="true"
        android:layout_marginTop="-10px"
        android:textColor="@android:color/holo_green_light"
        android:layout_height="wrap_content"  
       /> 
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="#D3D3D3"
        android:padding="10px"
         android:layout_marginTop="10px"
          android:id="@+id/pricetitleview"  
        android:layout_below="@+id/successtitle"  
        android:layout_height="wrap_content">
     <TextView  
        android:id="@+id/pricetitle"  
        android:text="Account number"  
        
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="35px"   
        android:paddingLeft="60px"
        android:paddingRight="10px"
        android:paddingTop="10px"
        android:textColor="@android:color/holo_green_light"
        android:layout_height="wrap_content"  
       /> 
     <TextView  
        android:id="@+id/price"  
        android:text="PKR"  
        android:layout_below="@+id/successtitle"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="20px"   
        android:paddingLeft="2px"
                android:layout_toRightOf="@+id/pricetitle"  

        android:paddingRight="10px"
        android:paddingTop="30px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
          <View
        android:background="@android:color/darker_gray"
       android:layout_height="48dp"
         android:layout_width="2dp"
        android:layout_below="@+id/successtitle"  
        android:layout_centerHorizontal="true" 
        android:layout_marginLeft="50px"
        android:id="@+id/sep8"  
     />
        <LinearLayout
          android:layout_toLeftOf="@+id/sep8"  
        android:layout_width="match_parent"
        android:layout_below="@+id/price"  
        android:layout_height="wrap_content"
      android:id="@+id/totalpaidlayout3"  
        android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
        android:orientation="horizontal">
    
     <TextView  
        android:id="@+id/Receivingamount"  
        android:text="Receiving amount"  
          android:gravity="center"
       android:layout_weight="0.5"
        android:textAppearance="?android:attr/textAppearanceLarge"  
       android:layout_width="0dp"
         android:textSize="25px"   
     
        android:layout_marginTop="2px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
 </LinearLayout>
  
      <LinearLayout
           android:layout_toRightOf="@+id/sep8"  
            android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_below="@+id/successtitle"
        android:layout_height="wrap_content"
      android:id="@+id/totalpaidlayout"  
        android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
        android:orientation="horizontal">
    
       <TextView  
        android:id="@+id/paidamount"  
        android:text="Payment date"  
                android:layout_width="wrap_content" 
              android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceLarge"  
         android:textSize="35px"  
      android:gravity="center"
       android:layout_weight="0.5"
        android:textColor="@android:color/holo_red_dark"
        android:layout_height="wrap_content"  
       /> <TextView  
        android:id="@+id/aedtitle"  
        android:text="AED"  
        android:layout_width="wrap_content" 
                android:layout_marginLeft="2px"
        android:textAppearance="?android:attr/textAppearanceLarge"  
      android:gravity="left"
       android:layout_weight="0.5"
         android:textSize="20px"   
       
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       />  </LinearLayout>
         <LinearLayout
           android:layout_toRightOf="@+id/sep8"  
            android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
          android:layout_below="@+id/totalpaidlayout"
        android:layout_height="wrap_content"
      android:id="@+id/totalpaidlayout2"  
        android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
        android:orientation="horizontal">
    >
     <TextView  
        android:id="@+id/totalpaid"  
        android:text="Total Paid"  
      
        android:textAppearance="?android:attr/textAppearanceLarge"  
