       /> 
     <View
        android:background="@android:color/darker_gray"
       android:layout_height="2dp"
         android:layout_width="match_parent"
        android:id="@+id/sep3"  
        android:layout_below="@+id/beneficaryname"  
     />
   
    
      
    <TextView  
        android:id="@+id/beneficiarybanktitle"  
        android:text="Beneficiary bank/Agent"  
        android:layout_below="@+id/sep3"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="25px"   
        android:paddingLeft="20px"
        android:paddingRight="10px"
        android:paddingTop="10px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
     <TextView  
        android:id="@+id/beneficiarybankname"  
        android:text="8756555"  
        android:layout_below="@+id/beneficiarybanktitle"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="35px"   
        android:paddingLeft="20px"
        android:layout_marginTop="2px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
 
    <View
        android:background="@android:color/darker_gray"
       android:layout_height="48dp"
         android:layout_width="2dp"
        android:id="@+id/sep4"  
        android:layout_below="@+id/sep3"  
         android:layout_toRightOf="@id/transactionreftitle"  
     />
       <TextView  
        android:id="@+id/payoutlocationtitle"  
        android:text="Payout Location"  
         android:layout_below="@+id/sep3"  
        android:layout_toRightOf="@+id/sep4"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="25px"   
        android:paddingLeft="10px"
        android:paddingTop="10px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
     <TextView  
        android:id="@+id/payoutlocation"  
        android:text="8756555"  
        android:layout_below="@+id/payoutlocationtitle"
         android:layout_toRightOf="@+id/sep4"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="35px"   
        android:paddingLeft="10px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
     <View
        android:background="@android:color/darker_gray"
       android:layout_height="2dp"
         android:layout_width="match_parent"
        android:id="@+id/sep5"  
        android:layout_below="@+id/sep4"  
     />
     <TextView  
        android:id="@+id/AccountNumbertitle"  
        android:text="Account number"  
        android:layout_below="@+id/sep5"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
