<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"  android:id="@+id/nameTextView"  
       android:layout_height="wrap_content">
         <Button
             android:layout_width="100px"
             android:layout_height="100px"
            android:text="&lt;"
            android:id="@+id/backbutton"
          
            android:textColor="#ffffff"
           android:padding="-5px"
            android:background="@android:color/transparent"
            />
    <TextView  
        android:id="@+id/nameTextView1"  
        android:text="Transaction Details"  
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="match_parent"  
         android:textSize="35px"   
        android:background="@android:color/holo_blue_dark"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:layout_height="100px"  
       /> 
    
      </RelativeLayout>
    <TextView  
        android:id="@+id/transactionreftitle"  
        android:text="Transaction refernce number"  
        android:layout_below="@+id/nameTextView"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="25px"   
        android:paddingLeft="20px"
        android:paddingRight="10px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
     <TextView  
        android:id="@+id/transactionrefnumber"  
        android:text="8756555"  
        android:layout_below="@+id/transactionreftitle"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="35px"   
        android:paddingLeft="20px"
        android:layout_marginTop="2px"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"  
       /> 
 
    <View
        android:background="@android:color/darker_gray"
       android:layout_height="48dp"
         android:layout_width="2dp"
        android:id="@+id/sep1"  
        android:layout_below="@+id/nameTextView"  
         android:layout_toRightOf="@id/transactionreftitle"  
     />
       <TextView  
        android:id="@+id/cfnumbertitle"  
        android:text="CF Number"  
         android:layout_below="@+id/nameTextView"  
        android:layout_toRightOf="@+id/sep1"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="25px"   
        android:paddingLeft="10px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
     <TextView  
        android:id="@+id/cfnumber"  
        android:text="8756555"  
        android:layout_below="@+id/cfnumbertitle"
         android:layout_toRightOf="@+id/sep1"  
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="wrap_content"  
         android:textSize="35px"   
        android:paddingLeft="10px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"  
       /> 
     <View
        android:background="@android:color/darker_gray"
       android:layout_height="2dp"
         android:layout_width="match_parent"
